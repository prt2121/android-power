<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/videoListItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/tvVideoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:padding="15dp"
        android:singleLine="true"
        android:text="Title"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:padding="15dp"
        android:singleLine="true"
        android:text="Total Like"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@+id/tvVideoTitle"
        android:layout_toRightOf="@+id/tvVideoLikeNumber"
        android:layout_toEndOf="@+id/tvVideoLikeNumber" />

    <TextView
        android:id="@+id/tvVideoLikeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:padding="15dp"
        android:singleLine="true"
        android:text="like"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@+id/tvVideoTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textOff="like"
        android:textOn="unlike"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />


</RelativeLayout>
